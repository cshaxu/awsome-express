{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["*.cjs", "src/**/*"]
}
